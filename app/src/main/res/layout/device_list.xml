<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <!-- 设备Icon -->
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:baselineAlignBottom="true"
            android:paddingLeft="8dp"
            android:src="@drawable/ic_client"/>

        <!-- 定义一个竖直方向的LinearLayout,显示设备型号与名字 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_mType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_mName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/select_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_caiji">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/turn_up"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/up">
        </ImageView>

        <ImageView
            android:id="@+id/turn_down"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/down">
        </ImageView>

        <ImageView
            android:id="@+id/turn_left"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left">
        </ImageView>

        <ImageView
            android:id="@+id/turn_right"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right">
        </ImageView>

        <ImageView
            android:id="@+id/switch_face_detect"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/switch_on">
        </ImageView>
    </LinearLayout>

</LinearLayout>